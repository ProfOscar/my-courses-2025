<h1>Catalogo dei corsi</h1>

@for (int i = 0; i < 10; i++) {
    <div class="row">
        <div class="col-md-1">
            <img src="~/logo.svg" alt="MyCourses" height="25" />
        </div>
        <div class="col-md-5">
            <h2>Titolo del corso</h2>
            <author>di Nome Cognome</author>
        </div>
        <div class="col-md-2">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        </div>
        <div class="col-md-2">
            EUR 10,99
            <br />
            <s>EUR 12,99</s>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-primary" asp-controller="Courses" asp-action="Details" asp-route-id="@i">
                Dettagli del corso @i
            </a>
        </div>
    </div>
}